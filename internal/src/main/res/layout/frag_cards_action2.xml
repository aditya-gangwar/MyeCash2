<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:layout_below="@id/toolbar_actions"
    android:paddingLeft="@dimen/screen_side_padding"
    android:paddingRight="@dimen/screen_side_padding">

    <LinearLayout
        style="@style/LL_Horizontal_wrap"
        android:id="@+id/layout_title"
        android:layout_marginTop="@dimen/medium_space">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_card_membership_white_24dp"
            android:tint="@color/primary"
            android:layout_gravity="center"/>

        <EditText
            style="@style/Edittext_only_view_medium"
            android:id="@+id/title_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Upload to Pool"
            android:layout_gravity="center"
            android:textColor="@color/accent"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        style="@style/Divider_horizontal_Large"
        android:layout_marginBottom="@dimen/large_space"
        android:layout_below="@id/layout_title"
        android:id="@+id/underline_title"/>

    <LinearLayout
        style="@style/LL_Horizontal_wrap"
        android:id="@+id/layout_allottee"
        android:layout_below="@id/underline_title"
        android:layout_marginBottom="@dimen/large_space">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_perm_identity_white_24dp"
            android:tint="@color/primary"/>
        <EditText
            style="@style/Edittext_only_view_small"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Allot To ?"
            android:layout_weight="40"
            android:gravity="left"/>
        <EditText
            style="@style/MyEdittext_Small"
            android:id="@+id/input_allottee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Agent ID"
            android:layout_weight="60"
            android:gravity="left"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cards_recycler_view"
        android:layout_below="@id/layout_allottee">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginBottom="@dimen/large_space"
        android:layout_below="@id/cards_recycler_view"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.AppCompatButton
            style="@style/button_normal_thin"
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:text="Scan"
            android:layout_weight="47.5"
            android:layout_gravity="bottom"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_gravity="bottom"/>

        <android.support.v7.widget.AppCompatButton
            style="@style/button_normal_thin"
            android:id="@+id/btn_action"
            android:layout_width="0dp"
            android:text="Action"
            android:layout_weight="47.5"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</RelativeLayout>