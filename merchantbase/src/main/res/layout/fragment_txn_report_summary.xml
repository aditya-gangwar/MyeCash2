<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <android.support.v7.widget.AppCompatButton
        style="@style/button_normal"
        android:layout_alignParentBottom="true"
        android:id="@+id/details_btn"
        android:text="Transactions"
        android:drawableRight="@drawable/ic_arrow_forward_white_24dp"/>

    <LinearLayout
        style="@style/LL_Vertical_paddingSidesLarge"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/details_btn"
        android:background="@color/lightest_grey">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/LL_Horizontal_wrap">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/txns"
                    android:layout_marginRight="@dimen/medium_space">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_swap_horiz_white_24dp"
                        android:layout_gravity="center"
                        android:padding="@dimen/medium_space"/>
                </FrameLayout>

                <EditText
                    style="@style/Edittext_only_view_medium"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="Total Transactions" />

                <EditText
                    style="@style/Edittext_only_view_medium"
                    android:layout_width="wrap_content"
                    android:id="@+id/input_trans_count"
                    android:text="25"
                    android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/LL_Horizontal_wrap">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/bill"
                    android:layout_marginRight="@dimen/medium_space">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_receipt_white_24dp"
                        android:layout_gravity="center"
                        android:padding="@dimen/medium_space"/>
                </FrameLayout>

                <EditText
                    style="@style/Edittext_only_view_medium"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="Total Bill"/>
                <EditText
                    style="@style/Edittext_only_click_medium"
                    android:layout_width="wrap_content"
                    android:id="@+id/input_trans_bill_amt"
                    android:text="+ \u20B9 235"
                    android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/LL_Horizontal_wrap">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/account"
                    android:layout_marginRight="@dimen/medium_space">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_balance_wallet_white_24dp"
                        android:layout_gravity="center"
                        android:padding="@dimen/medium_space"/>
                </FrameLayout>

                <LinearLayout
                    style="@style/LL_Vertical">

                    <EditText
                        style="@style/Edittext_only_view_small"
                        android:layout_height="wrap_content"
                        android:id="@+id/label_cash_account"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="ACCOUNT"
                        android:textColor="@color/primary"/>

                    <LinearLayout
                        style="@style/LL_Horizontal_wrap">

                            <EditText
                                style="@style/Edittext_only_view_medium"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:text="Total Add"/>
                            <EditText
                                style="@style/Edittext_only_click_medium"
                                android:layout_width="wrap_content"
                                android:id="@+id/input_trans_add_account"
                                android:text="+ \u20B9 235"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LL_Horizontal_wrap"
                        android:layout_marginBottom="@dimen/small_space">

                        <EditText
                            style="@style/Edittext_only_view_medium"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="Total Debit"/>
                        <EditText
                            style="@style/Edittext_only_click_medium"
                            android:layout_width="wrap_content"
                            android:id="@+id/input_trans_debit_account"
                            android:text="- \u20B9 235"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/LL_Horizontal_wrap">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/cashback"
                    android:layout_marginRight="@dimen/medium_space">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_grade_white_24dp"
                        android:layout_gravity="center"
                        android:padding="@dimen/medium_space"/>
                </FrameLayout>

                <LinearLayout
                    style="@style/LL_Vertical">

                    <EditText
                        style="@style/Edittext_only_view_small"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="CASHBACK"
                        android:textColor="@color/primary"/>

                    <LinearLayout
                        style="@style/LL_Horizontal_wrap">

                        <EditText
                            style="@style/Edittext_only_view_medium"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="Total Award"/>
                        <EditText
                            style="@style/Edittext_only_click_medium"
                            android:layout_width="wrap_content"
                            android:id="@+id/input_trans_add_cb"
                            android:text="+ \u20B9 235"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LL_Horizontal_wrap"
                        android:layout_marginBottom="@dimen/small_space">

                        <EditText
                            style="@style/Edittext_only_view_medium"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="Total Redeem"/>
                        <EditText
                            style="@style/Edittext_only_click_medium"
                            android:layout_width="wrap_content"
                            android:id="@+id/input_trans_redeem_cb"
                            android:text="- \u20B9 235"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"/>

    </LinearLayout>

</RelativeLayout>
