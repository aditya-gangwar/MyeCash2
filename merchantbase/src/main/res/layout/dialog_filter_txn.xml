            style="@style/Edittext_only_view_small"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="To"
            android:layout_weight="27.5"
            android:gravity="left"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
