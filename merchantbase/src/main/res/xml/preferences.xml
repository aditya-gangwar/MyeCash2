<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="CASHBACK">

        <EditTextPreference
            android:title="Cashback Rate (%)"
            android:key="settings_cb_rate"
            android:summary="0% Cashback on Bill Amount.\n0 means Disabled."
            android:inputType="number"
            android:digits="0123456789."
            android:maxLength="@string/cb_rate_char_limit">
        </EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="ACCOUNT">

        <SwitchPreference
            android:title="Add Cash to Account"
            android:key="settings_cl_add_enabled"
            android:summary="Enable/Disable 'Add Cash' to Customer Account.">
        </SwitchPreference>

        <!--EditTextPreference
            android:title="Prepaid Extra Cashback (%)"
